<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CollectionStyle"
    android:layout_margin="8dp">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/item_profile_collection_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_favorite"
        android:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_profile_collection_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:fontFamily="@font/graphik_regular"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/item_profile_collection_count_btn"
        app:layout_constraintTop_toBottomOf="@id/item_profile_collection_icon"
        tools:text="Любимые" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/item_profile_collection_count_btn"
        style="@style/CollectionButtonStyle"
        android:layout_width="30dp"
        android:layout_height="17dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_profile_collection_label"
        tools:text="105" />

</androidx.constraintlayout.widget.ConstraintLayout>