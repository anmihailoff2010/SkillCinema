<resources>
    <!-- Base application theme. -->
    <style name="Theme.SkillCinema" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="OnPosterDetail">
        <item name="android:fontFamily">@font/graphik_bold</item>
        <item name="android:textColor">@color/detail_on_poster_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonsStyle">
        <item name="android:fontFamily">@font/graphik_regular</item>
        <item name="android:background">@drawable/custom_button_effect</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="CollectionStyle">
        <item name="android:background">@drawable/custom_collection_item_group</item>
        <item name="android:layout_height">146dp</item>
        <item name="android:layout_width">146dp</item>
        <item name="android:radius">20dp</item>
    </style>

    <style name="CollectionButtonStyle">
        <item name="android:background">@drawable/custom_collection_item_count_btn</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>